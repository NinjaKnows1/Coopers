  <!-- add your own post -->
  <div class="row g-5  mx-1">
    <div class="col-12 col-md-8">
      <h3 class="pb-4 mb-4 fst-italic border-bottom">
        Write down your wishes -->
      </h3>
      <div class="container">
        <!-- Loop through the wishes list -->
        <% wishes.forEach(wish => { %>
            <div class="wish-post" style="background-color:#F5F5DC; padding: 15px; margin-bottom: 20px; border-radius: 8px;">
            <h2 class="display-5 link-body-emphasis mb-1"><%= wish.wish %></h2>
            <p class="wish-meta">Submitted by <%= wish.name %> on <%= wish.date %></p>
            <p class="wish-reason"><%= wish.reason %></p>
                <!-- Delete form -->
            <form action="/about/delete-wish" method="POST" style="display: inline;">
                <input type="hidden" name="wishId" value="<%= wish.wishId %>">
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>
            <hr>
            </div>
        <% }) %>
      
        <!-- Add more wishes as needed -->
      </div>
    </div>

    <div class="col-12 col-md-4">
      <div class="position-sticky" style="top: 2rem;">
        <div class="p-4 mb-3 bg-body-tertiary rounded">
          <h4 class="fst-italic">Submit your wishes</h4>
          <!-- form.ejs -->
            <form action="/about/make-wish" method="POST">
            <!-- Wish input -->
              <div class="mb-3">
                <label for="wish" class="form-label">What do you want?</label>
                <input type="text" class="form-control" id="wish" name="wish" required placeholder="Enter your wish here">
              </div>
            <!-- Reason input -->
            <div class="mb-3">
                <label for="reason" class="form-label">Reason for your wish</label>
                <textarea class="form-control" id="reason" name="reason" rows="3" required placeholder="Why do you want this?"></textarea>
                </div>
              <!-- Name input -->
              <div class="mb-3">
                <label for="name" class="form-label">Your Name</label>
                <input type="text" class="form-control" id="name" name="name" required placeholder="Enter your name">
              </div>
              <!-- Submit Button -->
              <div class="text-center">
                <button type="submit" class="btn btn-primary">Submit Wish</button>
              </div>
            </form>
